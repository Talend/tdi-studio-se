    <commons-cli.version>1.4</commons-cli.version>
    <slf4j.version>1.7.25</slf4j.version>
    <junit5.version>5.1.0-RC1</junit5.version>

    <!-- plugins -->
    <junit-platform-surefire-provider.version>1.1.0-RC1</junit-platform-surefire-provider.version>
  </properties>

